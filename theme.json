{
  "version": 2,
  "templateParts": [
    {
      "name": "header",
      "area": "header"
    },
    {
      "name": "footer",
      "area": "footer"
    }
  ],
  "settings": {
    "appearanceTools": true,
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "color": {
      "background": true,
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "link": true,
      "text": true,
      "palette": [
        {
          "slug": "black",
          "color": "#000000",
          "name": "Black"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        },
        {
          "slug": "opaque-yellow",
          "color": "rgba(255, 196, 0, var(--wp--custom--bg-opacity, 1))",
          "name": "Opaque Yellow"
        },
        {
          "slug": "opaque-orange",
          "color": "rgba(255, 106, 0, var(--wp--custom--bg-opacity, 1))",
          "name": "Opaque Orange"
        },
        {
          "slug": "opaque-amaranth",
          "color": "rgba(227, 11, 74, var(--wp--custom--bg-opacity, 1))",
          "name": "Opaque Amaranth"
        },
        {
          "slug": "purple",
          "color": "#7E21CD",
          "name": "Purple"
        },
        {
          "slug": "vivid-purple",
          "color": "#9B51E0",
          "name": "Vivid Purple"
        }
      ]
    },
    "layout": {
      "contentSize": "var(--wp--custom--content--base)",
      "wideSize": "var(--wp--custom--content--wide)"
    },
    "spacing": {
      "blockGap": true,
      "margin": true,
      "padding": true,
      "units": [ "px", "em", "rem", "vh", "vw", "%" ]
    },
    "typography": {
      "customFontSize": true,
      "fontStyle": true,
      "fontWeight": true,
      "letterSpacing": true,
      "textDecoration": true,
      "lineHeight": true,
      "textTransform": true,
      "dropCap": true,
      "fontSizes": [
        {
          "size": "1rem",
          "slug": "small"
        },
        {
          "size": "1.125rem",
          "slug": "medium"
        },
        {
          "size": "1.75rem",
          "slug": "large"
        },
        {
          "size": "clamp(1.75rem, 3vw, 2.25rem)",
          "slug": "x-large"
        }
      ],
      "fontFamilies": [
        {
          "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
          "name": "System Font",
          "slug": "system-font"
        },
        {
          "fontFamily": "\"Source Serif Pro\", serif",
          "name": "Source Serif Pro",
          "slug": "source-serif-pro"
        }
      ]
    },
    "custom": {
      "border-radius": "0.75rem",
      "bg-opacity": 0.5,
      "font-size": {
        "root": "16px",
        "root-xs": "14px"
      },
      "line-height": {
        "body": 1.7,
        "heading": 1.3,
        "page-title": 1.1
      },
      "content": {
        "base": "980px",
        "wide": "1120px"
      },
      "spacing": {
        "unit": "1rem",
        "horizontal": "1.5rem",
        "vertical": "1rem"
      },
      "font-weight":{
        "light": "300",
        "normal": "normal",
        "bold": "600"
      }
    },
    "blocks": {
      "core/paragraph": {
      },
      "core/group": {
        "spacing": {
          "padding": true,
          "margin": true,
          "blockGap": true
        }
      },
      "core/buttons": {
      },
      "core/cover": {
        "spacing": {
          "margin": true,
          "blockGap": true
        }
      },
      "core/heading": {
        "spacing": {
          "margin": true,
          "padding": true
        }
      },
      "core/post-content": {
        "spacing": {
          "blockGap": true,
          "padding": true
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--purple)",
      "text": "var(--wp--preset--color--white)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system-font)",
      "lineHeight": "var(--wp--custom--typography--line-height--normal)",
      "fontSize": "var(--wp--preset--font-size--medium)"
    },
    "spacing": {
      "blockGap": "1.3rem"
    },
    "elements": {
      "link": {
        "color": {
          "text": "inherit"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "lineHeight": "var(--wp--custom--line-height--page-title)",
          "fontWeight": "var(--wp--custom--font-weight--normal)",
          "fontFamily": "var(--wp--preset--font-family--system-font)"
        },
        "spacing": {
          "margin": {
            "top": "0",
            "bottom": "var(--wp--style--block-gap)"
          }
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "lineHeight": "var(--wp--custom--line-height--heading)",
          "fontWeight": "var(--wp--custom--font-weight--normal)",
          "fontFamily": "var(--wp--preset--font-family--system-font)"
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--style--block-gap)",
            "bottom": "0"
          }
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "lineHeight": "var(--wp--custom--line-height--heading)",
          "fontWeight": "var(--wp--custom--font-weight--normal)",
          "fontFamily": "var(--wp--preset--font-family--system-font)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--lead)",
          "lineHeight": "var(--wp--custom--line-height--heading)",
          "fontFamily": "var(--wp--preset--font-family--system-font)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--normal)",
          "lineHeight": "var(--wp--custom--line-height--heading)",
          "fontFamily": "var(--wp--preset--font-family--system-font)"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--extra-small)",
          "lineHeight": "var(--wp--custom--line-height--heading)",
          "fontFamily": "var(--wp--preset--font-family--system-font)"
        }
      }
    },
    "blocks": {
      "core/post-content": {
        "spacing": {
          "blockGap": "0",
          "margin": {
            "top": "0",
            "right": "0",
            "bottom": "0",
            "left": "0"
          }
        }
      },
      "core/template-part": {
        "spacing": {
          "blockGap": "0"
        }
      },
      "core/columns": {
        "spacing": {
          "blockGap": "2rem"
        }
      },
      "core/group": {
        "spacing": {
          "blockGap": "1.5rem",
          "padding": {
            "top": "0",
            "right": "0",
            "bottom": "0",
            "left": "0"
          }
        },
        "border": {
          "radius": "var(--wp--custom--border-radius, 0)"
        }
      },
      "core/buttons": {
        "spacing": {
          "blockGap": "2rem"
        }
      },
      "core/cover": {
        "spacing": {
          "blockGap": "1rem",
          "margin": {
            "top": "0",
            "right": "0",
            "bottom": "0",
            "left": "0"
          },
          "padding": {
            "top": "2rem",
            "right": "2rem",
            "bottom": "2rem",
            "left": "2rem"
          }
        }
      },
      "core/site-tagline": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "lineHeight": "1.4"
        }
      },
      "core/post-author": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--extra-small)",
          "lineHeight": "var(--wp--custom--line-height--body)"
        }
      },
      "core/post-date": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--extra-small)",
          "lineHeight": "var(--wp--custom--line-height--body)"
        }
      },
      "core/site-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "textTransform": "uppercase",
          "fontWeight": "var(--wp--custom--font-weight--normal)"
        }
      }
    }
  }
}
