{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Modern",
	"settings": {
		"useRootPaddingAwareAlignments": true,
		"appearanceTools": true,
		"color": {
			"duotone": [
				{
					"colors": [
						"#222828",
						"#9EF9FD"
					],
					"slug": "default-filter",
					"name": "Default filter"
				}
			],
			"gradients": [
				{
					"gradient": "linear-gradient(144deg, var(--wp--preset--color--primary-300) 0%, var(--wp--preset--color--primary-500) 100%)",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"gradient": "linear-gradient(144deg, var(--wp--preset--color--primary-500) 0%, var(--wp--preset--color--primary-700) 100%)",
					"name": "Primary Dark",
					"slug": "primary-dark"
				},
				{
					"gradient": "linear-gradient(144deg, var(--wp--preset--color--secondary-300) 0%, var(--wp--preset--color--secondary-500) 100%)",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"gradient": "linear-gradient(144deg, var(--wp--preset--color--tertiary-300) 0%, var(--wp--preset--color--tertiary-500) 100%)",
					"name": "Tertiary",
					"slug": "tertiary"
				},
				{
					"gradient": "linear-gradient(180deg, var(--wp--preset--color--tertiary) 0%,var(--wp--preset--color--primary) 100%)",
					"name": "Tertiary to Primary",
					"slug": "tertiary-primary"
				},
				{
					"gradient": "linear-gradient(180deg, var(--wp--preset--color--base) 0%,var(--wp--preset--color--primary) 350%)",
					"name": "Base to Primary",
					"slug": "base-primary"
				},
				{
					"gradient": "radial-gradient(circle at 5px 5px,#0c0d0d70 2px,#ffffff00 0px,#ffffff00 0px) 0 0 / 8px 8px, linear-gradient(180deg, var(--wp--preset--color--base) 0%,#000000 200%)",
					"name": "Dots",
					"slug": "dots"
				}
			],
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#000000",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"slug": "yellow",
					"color": "#ffdc00",
					"name": "Yellow"
				},
				{
					"slug": "orange",
					"color": "#FF5F1F",
					"name": "Orange"
				},
				{
					"slug": "amaranth",
					"color": "#e10f47",
					"name": "Amaranth"
				},
				{
					"slug": "burnt-teal",
					"color": "#108387",
					"name": "Burnt Teal"
				},
				{
					"slug": "purple",
					"color": "#7E21CD",
					"name": "Purple"
				},
				{
					"slug": "ultra-blue",
					"color": "#4927fc",
					"name": "Ultra Blue"
				},
				{
					"slug": "black",
					"color": "#000000",
					"name": "Black"
				},
				{
					"slug": "white",
					"color": "#ffffff",
					"name": "White"
				}
			]
		},

		"custom": {
			"theme": {
				"name": "classic"
			}
		}
	},
	"styles": {
		"blocks": {
			"core/comment-author-name": {
				"elements": {
					"link": {
						":active": {
							"color": {
								"text": "var(--wp--preset--color--tertiary)"
							}
						}
					}
				}
			},
			"core/heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--hepta-slab)"
				}
			},
			"core/comment-date": {
				"elements": {
					"link": {
						":active": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/comment-edit-link": {
				"elements": {
					"link": {
						":active": {
							"color": {
							}
						}
					}
				}
			},
			"core/comments-pagination": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "underline"
						}
					}
				}
			},
			"core/navigation": {
				"elements": {
					"link": {
						"typography": {
							"fontFamily": "var(--wp--preset--font-family--gantari)",
							"fontSize": "var(--wp--preset--font-size--large)",
							"textDecoration": "none"
						}
					}
				}
			},
			"core/paragraph": {
				"elements": {
				}
			},
			"core/post-content": {
			},
			"core/post-date": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/post-featured-image": {
				"filter": {
				}
			},
			"core/post-title": {
				"elements": {
					"link": {
						":active": {
							"color": {
								"text": "var(--wp--preset--color--base)"
							},
							"typography": {
								"textDecoration": "none"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/query-pagination": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "underline"
						}
					}
				}
			},
			"core/navigation-link": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--gantari)"

				}
			},
			"core/page-list": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--gantari)"
				}
			},
			"core/home-link": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--gantari)"
				}
			},
			"core/page-list-item": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--gantari)"
				}
			},
			"core/site-title": {
				"elements": {
					"link": {
						":active": {
							"color": {
								"text": "var(--wp--preset--color--primary)"
							}
						}
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--hepta-slab)",
					"fontStyle": "italic",
					"fontWeight": "700",
					"textDecoration": "none"
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--gantari)",
			"lineHeight": "var(--wp--custom--line-height--normal)",
			"fontSize": "var(--wp--preset--font-size--medium)"
		},
		"elements": {
			"button": {
				":active": {
					"color": {
						"gradient": "var(--wp--preset--gradient--primary-dark)"
					}
				},
				":focus": {
					"color": {
						"gradient": "var(--wp--preset--gradient--primary-dark)"
					}
				},
				":hover": {
					"color": {
						"gradient": "var(--wp--preset--gradient--primary-dark)"
					}
				},
				"border": {
					"radius": "5px"
				},
				"color": {
					"gradient": "var(--wp--preset--gradient--primary)",
					"text": "var(--wp--preset--color--base)"
				},
				"typography": {
					"fontWeight": "600"
				}
			}
		}
	}
}
